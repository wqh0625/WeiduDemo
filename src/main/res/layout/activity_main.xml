<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_130"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image01"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_27"

            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/login_icon_phone_n_xhdpi" />

        <EditText
            android:id="@+id/login_mobile"
            android:layout_width="@dimen/dp_350"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint=" 手机号"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_22"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/login_mobile"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_190"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#fff"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_200"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image02"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/login_icon_lock_n_xhdpi" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@null"
            android:hint=" 登录密码"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_20"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/eye"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/login_icon_eye_n_xhdpi" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/login_mobile"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_260"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#fff"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_270"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30">

        <CheckBox
            android:id="@+id/check_remeber"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:layout_marginTop="@dimen/dp_3" />

        <!--style="@style/MyCheckBox"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_3"
            android:text="记住密码"
            android:textColor="#fff"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/start_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_3"
            android:padding="@dimen/dp_5"
            android:text="快速注册"
            android:textColor="#fff"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_472"
        android:background="@drawable/btn_style"
        android:text="登录"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>