<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
         ></FrameLayout>

    <RadioGroup

        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/xxxrectangle"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10">

        <RadioButton
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_18"
            android:drawableTop="@drawable/select_home"
            android:button="@null" />

        <RadioButton
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_33"
            android:drawableTop="@drawable/select_circle"
            android:button="@null" />

        <RadioButton
            android:layout_width="@dimen/dp_63"
            android:layout_height="@dimen/dp_63"
            android:layout_alignBottom="@+id/myRadio"
            android:layout_marginLeft="@dimen/dp_32"
            android:layout_marginTop="@dimen/dp_15"
            android:button="@null"
            android:drawableTop="@drawable/commom_tab_btn_shopping_cart"  />

        <RadioButton
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_33"
            android:drawableTop="@drawable/select_home_list"
            android:button="@null" />

        <RadioButton
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_30"
            android:drawableTop="@drawable/select_home_my"
            android:button="@null" />
    </RadioGroup>
</LinearLayout>