<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/beijingxuhua"
    android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/mSDv_WaitTalk_Child"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:layout_margin="8dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTv_Name_WaitTalk_Child"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_toRightOf="@+id/mSDv_WaitTalk_Child"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="哈哈哈好好好好好好哈哈哈哈哈哈好好"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTv_Price_WaitTalk_Child"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="￥ 32122"
                android:textColor="#ff0606"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/mBt_ToTalk_Child"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_28"
                android:background="#ff5757"
                android:layout_marginRight="@dimen/dp_20"
                android:text="去评价"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>