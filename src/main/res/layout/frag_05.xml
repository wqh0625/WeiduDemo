<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg_bitmap"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_142" />


    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_120"
        android:background="@drawable/my"
        android:orientation="vertical">


        <TextView
            android:id="@+id/my_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="@dimen/dp_50"
            android:text="44444"
            android:textColor="#666"

            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/my_geren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_120"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_50"
                android:background="@drawable/my_icon_information_n" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="个人资料"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#97694F" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/my_qz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_geren"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_50"
                android:background="@drawable/my_icon_circle_n" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的圈子"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#97694F" />
            </LinearLayout>
        </LinearLayout>
        <!---->
        <LinearLayout
            android:id="@+id/my_zuji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_qz"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginLeft="@dimen/dp_50"
                android:background="@drawable/my_icon_foot_n" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的足迹"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#97694F" />
            </LinearLayout>
        </LinearLayout>
        <!---->
        <LinearLayout
            android:id="@+id/my_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_zuji"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_50"
                android:background="@drawable/my_icon_wallet_n" />
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的钱包"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#97694F" />
            </LinearLayout>
        </LinearLayout>
        <!---->
        <LinearLayout
            android:id="@+id/my_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_money"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_22"
                android:layout_marginLeft="@dimen/dp_50"
                android:background="@drawable/my_icon_address_n" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="我的收货地址"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#97694F" />
            </LinearLayout>
        </LinearLayout>
        <!---->
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/my_litterImage"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_alignTop="@+id/relative1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"

        fresco:roundAsCircle="true" />

</RelativeLayout>