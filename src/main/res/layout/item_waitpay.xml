<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_14"
    android:background="@drawable/beijingxuhua"
    android:orientation="vertical">

    <!-- 主页面 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="订单号"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/mTv_OrderNum_WaitPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WD20180605445435" />

        <TextView
            android:id="@+id/mTv_Time_WaitPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="2019-01-05"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRv_WaitPay"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTv_Num_WaitPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="共2件商品,需付款"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/mTv_Price_WaitPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="874.00"
            android:textColor="#f00"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:text="元"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_vertical">


        <Button
            android:id="@+id/mBt_CleanOrDer_WaitPay"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:background="#f6f6f6"
            android:text="取消订单"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />

        <Button
            android:id="@+id/mBt_ToPay"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_28"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#ff5757"
            android:text="去支付"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>
</LinearLayout>


