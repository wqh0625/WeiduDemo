<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="@dimen/dp_115"
        android:layout_height="@dimen/dp_166"
        android:background="@drawable/beijingxuhua"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/recyclerview1_icon"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_99"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/common_tab_btn_my_n" />

        <TextView
            android:id="@+id/recyclerview1_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_5"
            android:gravity="center_horizontal"
            android:ellipsize="end"
            android:maxEms="9"
            android:singleLine="true"
            android:text="ssdfsd"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/recyclerview1_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="ssdfsd"
            android:textColor="#ff0000"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</LinearLayout>