<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/dp_330"
        android:layout_height="@dimen/dp_118"
        android:background="@drawable/beijingxuhua"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/recyclerview2_icon"
            android:layout_width="@dimen/dp_85"
            android:layout_height="@dimen/dp_98"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/common_tab_btn_my_n" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_toRightOf="@id/recyclerview2_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyclerview2_title"
                android:layout_width="@dimen/dp_180"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:ellipsize="end"
                android:maxEms="15"
                android:singleLine="true"
                android:text="ssdfsd"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/recyclerview2_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="left"
                android:paddingTop="@dimen/dp_6"
                android:text="ssdfsd"
                android:textColor="#ff0000"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>