<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="24dp"
    android:background="@drawable/beijingxuhua"
    android:orientation="vertical">

    <!-- 主页面 -->
    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"  android:layout_above="@+id/mSDv_ShopCar_Item"
        android:orientation="vertical">-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="订单号"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/mTv_OrderNum_WaitTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_12"
            android:text="WD20180605445435" />

        <TextView

            android:id="@+id/mTv_Time_WaitTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:text="2019-01-05"
            android:textColor="#666666"
            android:textSize="@dimen/sp_10" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRv_WaitTake"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"></android.support.v7.widget.RecyclerView>
    <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">




    </RelativeLayout>-->

    <LinearLayout
        android:id="@+id/mrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mTv_Eamil_WaitTake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="派件公司 圆通快递"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mTv_EamilNum_WaitTake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="21599725848"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12" />

            <Button
                android:id="@+id/mBt_ToTake_WaitTake"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_28"
                android:layout_marginRight="16dp"
                android:background="#ff5757"
                android:text="确认收货"
                android:textColor="#fff"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>