<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView

            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/common_nav_btn_menu_n" />

        <TextView
            android:id="@+id/home_textView_start"
            android:layout_width="@dimen/dp_280"
            android:layout_height="@dimen/dp_26"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="@drawable/home_search"
            android:gravity="center"
            android:hint="请输入您要搜索的商品" />

        <ImageView
            android:id="@+id/home_search_image"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/common_nav_btn_search_n"
            android:gravity="center"
            android:text="搜索" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrllview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_marginTop="@dimen/dp_10"
                app:canLoop="true"
                app:indicatorAlign="center"
                app:middle_page_cover="false"
                app:open_mz_mode="true" />

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@drawable/one"-->
                <!--android:text="热销新品"-->
                <!--android:gravity="center"-->
                <!--android:drawableRight="@drawable/home_btn_moer_pink_n_xhdpi"-->
                <!--android:paddingRight="@dimen/dp_24"-->
                <!--android:paddingLeft="@dimen/dp_40"/>-->

            <LinearLayout
                android:id="@+id/lllll1"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/home_banner"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/one"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_24">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:paddingLeft="@dimen/dp_15"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:text="热销新品"
                        android:textColor="#ff7f57"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/home_btn_moer_pink_n_xhdpi" />
                </RelativeLayout>
                <!--<ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_4"
                    android:layout_marginRight="-20dp"
                    android:background="@drawable/home_btn_moxer_pink_n_xhdpi"/>-->
        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_170"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#f2f2f2" />

            <LinearLayout
                android:id="@+id/linear02"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/home_recyclerView1"
                android:background="@drawable/two"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_24">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_horizontal"
                        android:paddingLeft="@dimen/dp_15"
                        android:text="魔力时尚"
                        android:textColor="#236B8E"
                        android:textSize="@dimen/sp_14" />


                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_5"

                        android:src="@drawable/home_btn_more_purple_n_xhdpi" />

                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recyclerView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear02"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#f2f2f2" />

            <LinearLayout
                android:id="@+id/linear03"
                android:layout_width="@dimen/dp_360"
                android:layout_height="@dimen/dp_30"
                android:layout_below="@id/home_recyclerView2"
                android:background="@drawable/three"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_24">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/dp_15"
                        android:gravity="center_vertical"
                        android:text="品质生活"
                        android:textColor="#cc3299"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="22dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_5"
                        android:src="@drawable/common_btn_more_yellow_n_xhdpi" />

                </RelativeLayout>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recyclerView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/linear02"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_20" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>