<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_145"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image01"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_27"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/login_icon_phone_n_xhdpi" />

        <EditText
            android:id="@+id/register_mobile"
            android:layout_width="@dimen/dp_350"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:hint=" 手机号"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_23"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/register_mobile"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#fff"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image02"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/register_anq" />

        <EditText
            android:id="@+id/register_ma"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@null"
            android:hint=" 验证码"
            android:inputType="number"
            android:paddingLeft="@dimen/dp_22"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/register_getMa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textColor="#fff"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/login_mobile"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#fff"
        tools:ignore="NotSibling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image03"
            android:layout_width="@dimen/dp_19"
            android:layout_height="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_0"
            android:layout_marginTop="@dimen/dp_18"
            android:background="@drawable/login_icon_lock_n_xhdpi" />

        <EditText
            android:id="@+id/register_password"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:background="@null"
            android:hint=" 登录密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/dp_18"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/register_eye"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_13"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/login_icon_eye_n_xhdpi" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/login_mobile"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:background="#fff"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/back_login_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_220"
        android:layout_marginTop="@dimen/dp_10"
        android:text="已有账户？立即登录"
        android:textColor="#fff"
        android:textSize="@dimen/sp_11" />


    <Button
        android:id="@+id/register_btn"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_120"
        android:background="@drawable/btn_style"
        android:text="注册"
        android:textColor="#ff5f71"
        android:textSize="@dimen/sp_14" />
</LinearLayout>